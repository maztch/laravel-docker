# .env (Docker Compose Configuration)
# This file configures Docker Compose services

# Project name (affects container and network names)
COMPOSE_PROJECT_NAME=laravel

# PHP Configuration
PHP_VERSION=8.4

# PostgreSQL Configuration
POSTGRESQL_VERSION=16
POSTGRESQL_DATABASE=laravel
POSTGRESQL_USER=laravel_user
POSTGRESQL_PASSWORD=laravel_password
POSTGRESQL_PORT=5432

# pgAdmin Configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin_password
PGADMIN_PORT=8080

# Redis Configuration
REDIS_VERSION=alpine
REDIS_PORT=6379

# Nginx Configuration
HTTP_PORT=80
HTTPS_PORT=443

# PhpMyAdmin Configuration
PHPMYADMIN_PORT=8080

# Node.js Configuration
NODE_VERSION=18-alpine
NODE_ENV=development
VITE_PORT=5173
VITE_HMR_PORT=3000

# Application Path
APP_PATH=./src