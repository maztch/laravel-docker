# .env (Docker Compose Configuration)
# This file configures Docker Compose services

# Project name (affects container and network names)
COMPOSE_PROJECT_NAME=laravel

# PHP Configuration
PHP_VERSION=8.4

# MySQL Configuration
MYSQL_VERSION=8.0
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=laravel
MYSQL_USER=mysql_user
MYSQL_PASSWORD=mysql_password
MYSQL_PORT=3306

# Redis Configuration
REDIS_VERSION=alpine
REDIS_PORT=6379

# Nginx Configuration
HTTP_PORT=80
HTTPS_PORT=443

# PhpMyAdmin Configuration
PHPMYADMIN_PORT=8080

# Node.js Configuration
NODE_VERSION=18-alpine
NODE_ENV=development
VITE_PORT=5173
VITE_HMR_PORT=3000

# Application Path
APP_PATH=./src